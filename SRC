  <script>
    const residuos = document.querySelectorAll('.residuo');
    const lixeiras = document.querySelectorAll('.lixeira');
    const feedback = document.getElementById('feedback');
    let residuoArrastado = null;

    // Drag events para os res√≠duos
    residuos.forEach(residuo => {
      residuo.addEventListener('dragstart', (e) => {
        residuoArrastado = residuo;
        residuo.classList.add('dragging');
        e.dataTransfer.setData('text/plain', residuo.dataset.tipo);
        // Para permitir efeitos visuais
        setTimeout(() => residuo.style.display = 'none', 0);
      });

      residuo.addEventListener('dragend', () => {
        residuo.classList.remove('dragging');
        residuo.style.display = 'block';
        residuoArrastado = null;
      });
    });

    // Permitir drop nas lixeiras
    lixeiras.forEach(lixeira => {
      lixeira.addEventListener('dragover', (e) => {
        e.preventDefault(); // Permite o drop
        lixeira.style.filter = 'brightness(1.2)';
      });

      lixeira.addEventListener('dragleave', () => {
        lixeira.style.filter = 'none';
      });

      lixeira.addEventListener('drop', (e) => {
        e.preventDefault();
        lixeira.style.filter = 'none';

        if (!residuoArrastado) return;

        const tipoResiduo = residuoArrastado.dataset.tipo;
        const tipoLixeira = lixeira.dataset.tipo;

        if (tipoResiduo === tipoLixeira) {
          // Remove o residuo
          residuoArrastado.remove();
          mostrarFeedback("‚úÖ Voc√™ reciclou corretamente!", true);
          piscarLixeira(lixeira, true);
        } else {
          mostrarFeedback("‚ùå Lixeira errada! Tente de novo.", false);
          piscarLixeira(lixeira, false);
        }
      });
    });

    function mostrarFeedback(msg, sucesso) {
      feedback.textContent = msg;
      feedback.classList.remove('oculto', 'sucesso', 'erro');
      feedback.classList.add(sucesso ? 'sucesso' : 'erro');

      // Oculta a mensagem ap√≥s 2,5 segundos
      setTimeout(() => {
        feedback.classList.add('oculto');
      }, 2500);
    }

    function piscarLixeira(lixeira, acerto) {
      const classe = acerto ? 'flash-acerto' : 'flash-erro';
      lixeira.classList.add(classe);

      setTimeout(() => {
        lixeira.classList.remove(classe);
      }, 600);
    }
  </script>

